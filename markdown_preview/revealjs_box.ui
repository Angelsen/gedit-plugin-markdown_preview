<?xml version="1.0" encoding="UTF-8"?>
<interface domain="gedit-plugin-markdown-preview">
  <object class="GtkBox" id="revealjs_box">
    <property name="visible">True</property>
    <property name="orientation">vertical</property>
    <property name="spacing">16</property>

    <child>
      <object class="GtkLabel">
        <property name="visible">True</property>
        <property name="halign">start</property>
        <property name="label" translatable="yes">Theme:</property>
      </object>
    </child>

    <child>
      <object class="GtkFlowBox" id="theme_flowbox">
        <property name="visible">True</property>
        <property name="selection_mode">none</property>
      </object>
    </child>

    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <property name="spacing">16</property>
        <child>
          <object class="GtkLabel">
            <property name="label" translatable="yes">Show slide number</property>
          </object>
          <packing>
            <property name="pack-type">start</property>
          </packing>
        </child>
        <child>
          <object class="GtkSwitch" id="slide_number_switch"></object>
          <packing>
            <property name="pack-type">end</property>
          </packing>
        </child>
      </object>
    </child>

    <child>
      <object class="GtkLabel">
        <property name="visible">True</property>
        <property name="halign">start</property>
        <property name="label" translatable="yes">Transitions type:</property>
      </object>
    </child>

    <child>
      <object class="GtkFlowBox" id="transitions_flowbox">
        <property name="visible">True</property>
        <property name="selection_mode">none</property>
      </object>
    </child>

    <!-- TODO -->
  </object>
</interface>

